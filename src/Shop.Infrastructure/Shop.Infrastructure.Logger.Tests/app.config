<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
  </configSections>

  <unity configSource="unity.config"/>

  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log.log"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="2" />
      <maximumFileSize value="1024MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%message"/>
      </layout>
    </appender>

    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <to value="testshopemail@gmail.com" />
      <from value="testshopemail@gmail.com" />
      <EnableSsl value="true"/>
      <port value="587" />
      <subject value="test logging message" />
      <authentication value="Basic" />
      <username value="testshopemail@gmail.com"/>
      <password value="ppppppppp1"/>
      <smtpHost value="smtp.gmail.com" />
      <bufferSize value="512" />
      <lossy value="true" />
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="INFO"/>
      </evaluator>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message" />
      </layout>
    </appender>


    <appender name="ADONetAppender" type="log4net.Appender.ADONetAppender">
     <connectionString value="Server=(local); database=ShopTest; Trusted_Connection=Yes;Integrated Security=true" />
    </appender>
    
    <root>
      <level value="ALL" />
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="SmtpAppender" />
      <appender-ref ref="ADONetAppender" />
    </root>

  </log4net>
</configuration>
    
  
